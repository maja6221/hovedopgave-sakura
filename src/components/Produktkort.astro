---
const { image, kategori, data, tekst, overskrift, pris, link, aktiv } = Astro.props;
console.log(data);
import "../style/mutual.css";
---

<a href={link}>
  <article>
    <div class="card">
    <img src={image} alt="image" />
    <div class="div1">
      <h3>{overskrift}</h3>
      <p>{kategori} | {pris} </p>
      <p></p>
      <button>SHOP NU</button>
    </div>
  </div>
  </article>
</a>

<style>

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 30px;
  padding-bottom: 25px;
  background-color: var(--Primitives-Farver-Beige-02);
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}
  img {
    width: 100%;
    border-radius: 30px 30px 0px 0px;
  }

  button{
    text-align: center;
    cursor: pointer;
    font-family: "avenirnext-regular";
    font-size: 15px;
    margin: 10px;
    width: 240px;
    border: none;
    background-color: var(--Semantik-Knap-Red);
    color: var(--Semantik-Knap-Hvid);
    border-radius: 50px;
    padding-top: 15px;
    padding-bottom: 15px;
    border-style: solid;
    padding: 10px;
    border-color: var(--Semantik-Knap-Red);
    }
    button:hover {
      background-color: var(--Primitives-Farver-Beige-02);
      border-color: var(--Semantik-Knap-Red);
      color: var(--Semantik-Knap-Red);
    }

  .div1 {
    display: grid;
    justify-items: center;
  }

  a {
    text-decoration: none;
  }

  h3 {
    font-size: 20px;
    padding-bottom: 5px;
    color: black;
    padding-top: 22px;
    color: var(--Primitives-Farver-Hvid-sort-09);
  }

  p {
    font-family: "avenirnext-regular";
    font-size: 18px;
    padding-top: 10px;
    color: var(--Primitives-Farver-Hvid-sort-09);
    line-height: 1.5rem;
  }

  @media (min-width: 1000px) {
    img {
      width: 100%;
      height: auto;
      padding: 0px;
    }

    .div1 {
      display: grid;
      justify-items: center;
    }

    a {
      text-decoration: none;
    }

    h3 {
      font-family: "didotltstd-roman";
      font-size: 20px;
      padding-bottom: 10px;
      color: var(--Primitives-Farver-Hvid-sort-09);
    }

    p {
      font-family: "avenirnext-regular";
      font-size: 18px;
      padding-bottom: 10px;
      color: var(--Primitives-Farver-Hvid-sort-09);
    }
  }

</style>
