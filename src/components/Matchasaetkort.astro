<a href={link}>
  <article>
    <img src={image} alt="image" />
    <div class="div1">
      <h3>{overskrift}</h3>
      <h4>{kategori} | {pris} <span>DKK</span></h4>
      <p></p>
      <button>SHOP NU</button>
    </div>
  </article>
</a>

