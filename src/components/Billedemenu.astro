  <style>
    section {
      margin-inline: 1%;
      margin-top: 0%;
      margin-bottom: 5%;
    }

    .grid_opacity {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    #helle {
      grid-column: 1 / span 1.5;
    }

    .container {
      position: relative;
      width: 100%;
      padding-inline: 10px;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .image {
      opacity: 1;
      display: block;
      width: 100%;
      height: auto;
      transition: 0.5s ease;
      backface-visibility: hidden;
      border-radius: 30px;
    }

    .middle {
      transition: 0.5s ease;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
      text-align: center;
    }

    .container:hover .image {
      opacity: 0.3;
    }

    .container:hover .middle {
      opacity: 1;
    }

    .text {
      background-color: rgba(255, 255, 255, 0.679);

      font-size: 14px;
      padding: 16px 10px;
      white-space: nowrap;
      font-family: "avenirnext-regular";
      font-weight: bold;
    }

    .txt1 {
      text-decoration: none;
      color: var(--Primitives-Farver-Hvid-sort-09);
    }
    .txt1:hover {
      text-decoration: none;
      color: var(--Semantik-Knap-Red);
    }

    a {
      cursor: pointer;
    }
    @media (min-width: 1000px) {
      a {
        cursor: pointer;
      }
      section {
        margin-inline: 50px;
        margin-top: 0%;
        margin-bottom: 0%;
      }

      #helle {
        grid-column: 1 / span 1.5;
      }

      .container {
        position: relative;
        width: 100%;
        padding-inline: 15px;
        padding-top: 15px;
        padding-bottom: 15px;
      }

      .image {
        opacity: 1;
        display: block;
        width: 100%;
        height: auto;
        transition: 0.5s ease;
        backface-visibility: hidden;
        border-radius: 30px;
      }

      .middle {
        transition: 0.5s ease;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
      }

      .container:hover .image {
        opacity: 0.3;
      }

      .container:hover .middle {
        opacity: 1;
      }

      .text {
        background-color: rgba(255, 255, 255, 0.679);
        font-size: 16px;
        padding: 16px 20px;
        white-space: nowrap;
        font-family: "avenirnext-regular";
        font-weight: bold;
      }

      .txt1 {
        text-decoration: none;
        color: var(--Primitives-Farver-Hvid-sort-09);
      }
      .txt1:hover {
        text-decoration: none;
        color: var(--Semantik-Knap-Red);
      }
      .grid_opacity {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr;
      }
    }
  </style>
</section>
