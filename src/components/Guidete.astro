---
import "../style/mutual.css";
---
<div class="rundt_om_boks">
<div class="te_boks">
    <div class="boks1">
    <h4 class="overskrift_1">Hvad skal du bruge?</h4>
    <img class="billede_te" src="/images/ting.webp" alt="billede1">
    </div>
    <div>
    <h4 class="overskrift_2">Ingredienser</h4>
    <div class="boks_2">
        <h2>1.</h2>
        <p>1-2 tsk. matchapulver</p>
    </div>
    <div class="boks_3">
        <h2>2.</h2>
        <p>2 dl 75-80 graders varmt vand</p>
    </div>
    </div>
</div>
</div>


<style>

    /* desktop version */ 
    .te_boks{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        background-color: var(--Semantik-Baggrund-Brown);
        border-radius: 30px;
        margin-left: 20px;
        margin-right: 20px;
    }

    .rundt_om_boks{
        padding: 60px 50px 50px 50px;
    }
    h4{
        padding-top: 20px;
        padding-bottom: 20px;
        font-family: "didotltstd-roman";
    }

    .overskrift_1{
        gap: 10px;
        padding: 20px 0px 20px 0px;
    }

    .overskrift_2{
        gap: 10px;
        padding: 20px 20px 20px 20px;
        padding-top: 30px;
    }

    h2{
        color: var(--Semantik-Text-Overskrift-Green);
        padding-left: 10px;
        font-family: "didotltstd-roman";
     }

     p{
        font-size: 20px;
        padding-top: 25px;
        padding-left: 10px;
        font-family: "avenirnext-regular";
     }

    .boks1{
        padding-left: 80px;
        padding-right: 100px;
        padding-top: 10px;
        padding-bottom: 20px;
    }
    .boks_2{
        display: flex;
        gap: 10px;
        padding: 20px 10px 10px 10px;
    }
    .boks_3{
        display: flex;
        gap: 10px;
        padding: 10px 10px 10px 10px;
     }

     .billede_te{
        width: 100%;
     }

    /* mobil version */ 
    @media (max-width: 820px){
      .te_boks{
        display: grid;
        grid-template-columns: 1fr;
        gap: 10px;
        padding: 0px 5px 10px 0px;
        background-color: var(--Semantik-Baggrund-Brown);
    } 

    .billede_te{
        width: 100%;
        height: auto;
        padding-top: 7px;
        padding-bottom: 30px;
        padding-left: 10px;
    }

    h2{
        color: var(--Semantik-Text-Overskrift-Green);
        padding-left: 10px;
        font-size: 40px;
        font-family: "didotltstd-roman";
     }

     .overskrift_1{
        gap: 11px;
        padding-top: 20px;
        padding-bottom: 10px;
        padding-left: 20px;
        padding-right: 0px;
        font-size: 20px;
        font-family: "didotltstd-roman";
     }

     .overskrift_2{
        gap: 10px;
        padding-top: 10px;
        padding-bottom: 20px;
        padding-left: 20px;
        font-size: 20px;
        font-family: "didotltstd-roman";
        
     }

     .boks1{
        padding-left: 0px;
        padding-right: 0px;
     }

    .boks_3{
        display: flex;
        gap: 10px;
    }

    .boks_2{
        display: flex;
        gap: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
    }

    p{
        padding-top: 7px;
        padding-left: 10px;
        font-size: 15px;
        font-family: "avenirnext-regular";
     }

     .rundt_om_boks{
        padding: 0px;
     }

    }

    @media (min-width: 1900px){

        .billede_te{
            margin-left: 20%;
        }

        .overskrift_1{
            margin-left: 45%;
            font-size: 35px;
            padding-bottom: 30px;
        }
        .overskrift_2{
            margin-left: 20%;
            font-size: 35px;
        }

        .boks_2{
            margin-left: 20%;
        }

        .boks_3{
            margin-left: 20%;
        }
    }
    

</style>